    <link rel="icon" href="/logotecito.png">
    <link rel="stylesheet" href="/styles.css">
    <style>
        .contenedor-perfil {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            background-color: #f7f7f7;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            margin: 20px auto;
        }

        .foto-perfil {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin-bottom: 10px;
        }       

        .contenedor-perfil p {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }
