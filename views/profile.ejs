<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tea Coffee and Games: Reservas</title>
    <link rel="icon" href="logotecito.png">
    <link rel="stylesheet" href="/styles.css">
    <style>
        .foto-perfil {
            width: 100px;
            height: 100px;
            border: 5px solid #adff76;
            border-radius: 50%;
            position: absolute;
            top: 5%;
            left: 50%;
            transform: translateX(-50%);
        }       
        .boton-editar-perfil {
            padding: 10px 20px;
            background-color: #adff76;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-family: 'FuenteProyecto';
            box-shadow: 5px 5px 8px rgba(0, 0, 0, 0.1);
            text-decoration: none;
            color: #333;
        }

        .boton-editar-perfil:hover {
            background-color: #de8383;
            color: #333;
        }

        .contenedor-credencial {
            margin: 10px 0;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        #add-credential-form {
            margin-top: 20px;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        #add-credential-button {
            padding: 10px 20px;
            background-color: #4CAF50;
            border: none;
            border-radius: 5px;
            color: white;
            cursor: pointer;
        }

        #add-credential-button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="contenedor-color">
        <!-- Imagen del logotipo -->
        
        <img src="logotecito.png" alt="logotecito" class="contenedor-ajustado" width="180px">
        
        <div class="contenedor-botones" >
            <a href="/profile" class="boton-enlace">Perfil</a>
            <a href="/" class="boton-enlace">Calendario</a>
            <a href="/logout" class="boton-enlace">Cerrar Sesion</a>
        </div>
    </div>
    <div class="contenedor-interfaz">
        <div class="contenedor-perfil">
            <div class="foto-perfil-container">
                <img src="<%= user.urlfoto_usuario %>" alt="Foto de perfil" class="foto-perfil">
            </div>
            <div class="informacion-usuario">
                <br/><br/><br/><br/><br/>
                <h2><%= user ? user.nombre_usuario : 'Usuario' %></h2>
                <p><span><%= user.correo_usuario %></span></p>
                <p><span><%= user.numero_usuario %></span></p>

                <!--
                BOTON EDITAR PERFIL
                <h3 href="/edit" class="boton-editar-perfil">editar perfil</h3>
                -->
                
                <br/>
            </div>
        </div>
        <div>
            <% for (let i = 0; i < credenciales.length; i++) { %>
                <div class="contenedor-credencial">
                    <h3><%= credenciales[i].juego_credencial %></h3>
                    <p><%= credenciales[i].numero_credencial %></p>
                </div>
            <% } %>

            <!-- Botón para añadir credencial -->
            <button id="add-credential-button">Añadir Credencial</button>

            <!-- Formulario para añadir credencial -->
            <form id="add-credential-form" style="display: none;" method="POST" action="/add-credencial">
                <label for="juego_credencial">Juego:</label>
                <input type="text" id="juego_credencial" name="juego_credencial" required>

                <label for="numero_credencial">Número de Credencial:</label>
                <input type="text" id="numero_credencial" name="numero_credencial" required>

                <label for="correo_usuario">Correo Electrónico:</label>
                <input type="email" id="correo_usuario" name="correo_usuario" required>

                <button type="submit">Enviar</button>
            </form>
        </div>
    </div>
    <div class="contenedor-interfaz">
        <div class="columna">
            <% for (let i = 0; i < compras.length; i++) { %>
                <div class="event-container">
                    <h3><%= compras[i].descripcion_compra %></h3>
                    <p><%= compras[i].fecha_compra %></p>
                    <p>$<%= compras[i].monto_compra %></p>
                    <p><%= compras[i].URL_boleta_compra %></p>
                </div>
            <% } %>
        </div>
    </div>
    <script>
        // Mostrar y ocultar el formulario
        document.getElementById('add-credential-button').addEventListener('click', () => {
            const form = document.getElementById('add-credential-form');
            form.style.display = form.style.display === 'none' ? 'block' : 'none';
        });
    </script>
</body>
</html>